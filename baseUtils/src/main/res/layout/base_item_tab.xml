<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            tools:src="@drawable/ic_launcher" />

        <yin.style.baselib.view.AutoFitTextView
            android:id="@+id/tv_red_point"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignEnd="@+id/iv_img"
            android:layout_alignRight="@+id/iv_img"
            android:layout_alignTop="@+id/iv_img"
            android:layout_marginRight="-8dp"
            android:background="@drawable/base_red_point"
            android:gravity="center"
            android:text="11"
            android:maxLength="2"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:visibility="gone"
            app:sizeToFit="true"
            tools:visibility="visible" />

        <View
            android:id="@+id/v_red_point"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_alignEnd="@+id/iv_img"
            android:layout_alignRight="@+id/iv_img"
            android:layout_alignTop="@+id/iv_img"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/base_red_point"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:visibility="gone" />
    </RelativeLayout>

    <yin.style.baselib.view.AutoFitTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="2dp"
        android:singleLine="true"
        android:textSize="13sp"
        tools:text="测试测试测试测试" />
</LinearLayout>