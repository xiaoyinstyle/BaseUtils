<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/pic_first_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:background="@drawable/square_around"
        android:padding="0.5dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/pic_tv_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/pic_first_image"
        android:text="相机胶卷"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pic_image_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/pic_tv_folder_name"
        android:text="(0)"
        android:textColor="@color/grey"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/pic_iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_more" />

    <TextView
        android:id="@+id/pic_tv_img_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/pic_iv_more"
        android:background="@drawable/pic_message_oval"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/color_white"
        android:textSize="12sp"
        android:visibility="invisible" />

</RelativeLayout>