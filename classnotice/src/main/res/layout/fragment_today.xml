<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班主任："
            android:textColor="@color/text_black"
            android:textSize="@dimen/f1_text_size" />

        <TextView
            android:id="@+id/tv_f1_bzr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:text="王老师"
            android:textColor="@color/text_black"
            android:textSize="@dimen/f1_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班主任："
            android:textColor="@color/text_black"
            android:textSize="@dimen/f1_text_size" />

        <TextView
            android:id="@+id/tv_f1_fbzr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:text="王老师"
            android:textColor="@color/text_black"
            android:textSize="@dimen/f1_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班主任："
            android:textColor="@color/text_black"
            android:textSize="@dimen/f1_text_size" />

        <TextView
            android:id="@+id/tv_f1_bz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:text="王老师"
            android:textColor="@color/text_black"
            android:textSize="@dimen/f1_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_f1_gk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="今日应到30人，实到28人，2人迟到，2人未到"
            android:textColor="@color/text_black"
            android:textSize="@dimen/f1_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获得荣誉："
            android:textColor="@color/text_black"
            android:textSize="@dimen/f1_text_size" />

        <RatingBar
            style="@style/foodRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日育德："
            android:textColor="@color/text_black"
            android:textSize="@dimen/f1_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="眼保健操"
            android:textColor="@color/text_black"
            android:textSize="@dimen/f1_text_size" />

    </LinearLayout>


</LinearLayout>
