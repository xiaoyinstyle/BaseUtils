<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/iv_item_main_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="3dp"
            android:textColor="@color/textBlack"
            android:textSize="16sp"
            tools:text="这是一个项目名称" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="甲方："
                android:textColor="@color/textBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/iv_item_main_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/textBlack"
                android:textSize="16sp"
                tools:text="某某某" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预算："
                android:textColor="@color/textBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/iv_item_main_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textColor="@color/textBlack"
                android:textSize="16sp"
                tools:text="****" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收/支："
                android:textColor="@color/textBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/iv_item_main_income_expend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/textBlack"
                android:textSize="16sp"
                tools:text="****" />
        </LinearLayout>

        <TextView
            android:id="@+id/iv_item_main_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="3dp"
            android:textColor="@color/textGrey"
            android:textSize="12sp"
            tools:text="2017-08-10" />
    </LinearLayout>

    <yin.style.notes.view.LabelTextView
        android:id="@+id/ltv_item_main_statue"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="right|bottom"
        android:gravity="top"
        app:label_backgroundColor="#C2185B"
        app:label_distance="25dp"
        app:label_height="28dp"
        app:label_orientation="RIGHT_BOTTOM"
        app:label_text="结束"
        app:label_textSize="15sp" />
</android.support.v7.widget.CardView>